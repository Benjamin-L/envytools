	<reg32 offset="0x10c" name="PWM_DIV" variants="NV84:NV94" type="nv50_fan_div"/>
	<reg32 offset="0x600" name="DIV" variants="NVAA:NVA3" type="nv50_div"/>
	<reg32 offset="0x700" name="DIV" variants="NV50:NV92 NV98:NVAA" type="nv50_div"/>
